<h1>Listing notes</h1>

<table>
  <tr>
    <th>Passage</th>
    <th>Comment</th>
    <th>User</th>
    <th>Public</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @notes.each do |note| %>
  <tr>
    <td><%= note.passage %></td>
    <td><%= note.comment %></td>
    <td><%= note.user_id %></td>
    <td><%= note.public %></td>
    <td><%= link_to 'Show', note %></td>
    <td><%= link_to 'Edit', edit_note_path(note) %></td>
    <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

