<%= form_for(resource, :url => user_session_path, :class => 'form-horizontal') do |f| %>
			<div class="control-group">
			  <%= f.label :email , :class => 'control-label'%>
			  <%= f.email_field :email, :class => 'input-medium', :placeholder => 'Email' %>
			</div>
			<div class="control-group">
			  <%= f.label :password , :class => 'control-label'%>
			  <%= f.password_field :password, :class => 'input-medium', :placeholder => 'Password' %>
			</div>
			<div class="control-group">
			  <div class="controls">
			  <% if devise_mapping.rememberable? -%>
			    <label class="checkbox">
			    	<%= f.check_box :remember_me %> <%= f.label :remember_me %>
				</label>
			  <% end -%>
			  <%= f.submit "Sign in", :class => 'btn btn-large btn-inverse' %>
			  </div>
			</div>
			<% end %>