<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>

<div class="row-fluid show-grid">
  <div class="span6">
    <legend>My personal information <b>&quot;<%= current_user.name.to_s.humanize %>&quot;</b></legend>
    <%= devise_error_messages! %>
    <label><%= f.label 'My name' %></label/>
    <%= f.text_field :name, :placeholder => 'type your name' %>
    <label><%= f.label 'Something about you' %></label/>
    <%= f.text_area :about_me, :class => 'span12 note-comment', :placeholder => 'interest? favorite biblic verse? or whatever you want'%>
  </div>
  <div class="span6">  
    <legend>Access information</legend>
    <label><%= f.label :email %></label>
    <%= f.email_field :email %>

    <label><%= f.label :password %><label/>
    <%= f.password_field :password, :autocomplete => "off" %>
    <span class="help-block"><i>(leave blank if you don't want to change it)</i></span>

    <label><%= f.label :password_confirmation %></label>
    <%= f.password_field :password_confirmation, :autocomplete => "off" %>

    <label><%= f.label :current_password %></label>
    <%= f.password_field :current_password, :autocomplete => "off" %>
    <span class="help-block"><i>(we need your current password to confirm your changes)</i></span>
  </div>
</div>
<div class="row-fluid show-grid">
  <div class="span12" align="center">
      <%= f.submit "Update", :class => 'btn btn-primary' %>
      <%= link_to "Cancel", root_path, :class => 'btn btn-danger', :title => 'Cancel these changes' %>
  </div>
</div>
<% end %>